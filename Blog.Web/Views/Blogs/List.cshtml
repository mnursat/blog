@model ICollection<BlogPost>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@



<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Blog Posts</h1>
    </div>
</div>

<partial name="_Notification"/>

@if (Model is null || !Model.Any())
{
    <div class="container">
        <p>Blog posts not found.</p>
    </div>
}
else
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@post.Id</td>
                        <td>@post.Heading</td>
                        <td><a asp-controller="Blogs" asp-action="Edit" asp-route-id="@post.Id">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}