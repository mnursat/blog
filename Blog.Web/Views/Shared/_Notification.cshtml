@using Blog.Web.Models.ViewModels

@{
    var notification = (Notification)ViewBag.Notification;

    if (notification is not null)
    {
        var notificationClass = "";
        switch (notification.Type)
        {
            case Blog.Web.Enums.NotificationType.Success:
                notificationClass = "alert-success";
                break;
            case Blog.Web.Enums.NotificationType.Error:
                notificationClass = "alert-danger";
                break;
            case Blog.Web.Enums.NotificationType.Info:
                notificationClass = "alert-secondary";
                break;
            default:
                notificationClass = "";
                break;

        }

        <div class="container mb-3 mt-3">
            <div class="alert @notificationClass alert-dismissible fade show mb-3" role="alert">
                @Html.Raw(notification.Message)
                <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
}